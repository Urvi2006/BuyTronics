{
  "name": "Order",
  "type": "object",
  "properties": {
    "user_email": {
      "type": "string",
      "description": "Customer email"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "string"
          },
          "product_name": {
            "type": "string"
          },
          "product_image": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "price": {
            "type": "number"
          },
          "total": {
            "type": "number"
          }
        }
      },
      "description": "Order items"
    },
    "subtotal": {
      "type": "number",
      "description": "Subtotal amount"
    },
    "shipping_cost": {
      "type": "number",
      "description": "Shipping cost"
    },
    "total_amount": {
      "type": "number",
      "description": "Total order amount"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "confirmed",
        "processing",
        "shipped",
        "delivered",
        "cancelled"
      ],
      "default": "pending",
      "description": "Order status"
    },
    "shipping_address": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address_line1": {
          "type": "string"
        },
        "address_line2": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "postal_code": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        }
      },
      "description": "Shipping address"
    },
    "payment_method": {
      "type": "string",
      "enum": [
        "credit_card",
        "debit_card",
        "upi",
        "net_banking",
        "cash_on_delivery"
      ],
      "description": "Payment method"
    },
    "order_number": {
      "type": "string",
      "description": "Unique order number"
    }
  },
  "required": [
    "user_email",
    "items",
    "total_amount",
    "shipping_address"
  ]
}